<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/youku_toolbar_bg" android:layout_width="fill_parent" android:layout_height="48dp"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@+id/searchBtn" android:src="@drawable/actionbar_search_selector" android:layout_alignParentLeft="true" style="@style/toolbar_menu_style" />
    <ImageView android:id="@+id/moreBtn" android:src="@drawable/actionbar_more_selector" android:layout_alignParentRight="true" style="@style/toolbar_menu_style" />
    <RelativeLayout android:id="@+id/tabLayout" android:paddingLeft="13.0dip" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_centerInParent="true">
        <TextView android:id="@+id/left_tab" android:text="推荐" style="@style/toolbar_tab_text" />
        <TextView android:id="@+id/center_tab" android:text="精选" android:layout_toRightOf="@id/left_tab" style="@style/toolbar_tab_text" />
        <TextView android:id="@+id/right_tab" android:text="好声音" android:layout_toRightOf="@id/center_tab" style="@style/toolbar_tab_text" />
    </RelativeLayout>
</RelativeLayout>