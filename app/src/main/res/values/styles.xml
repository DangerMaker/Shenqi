<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RootTheme" parent="AppTheme">
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DemoButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">40dp</item>
    </style>

    <style name="homepage_tab_text">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@drawable/homepage_tab_text_selector</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">18dp</item>
    </style>

    <style name="toolbar_tab_text">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/toolbar_text_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/toolbar_menu_bg</item>
        <item name="android:paddingLeft">13.0dip</item>
        <item name="android:paddingRight">13.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="toolbar_menu_style">
        <item name="android:background">@drawable/toolbar_menu_bg</item>
        <item name="android:layout_width">46dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">center</item>
    </style>
</resources>
